<!DOCTYPE html>
<html lang="<%= locals.lang %>">
<head>
  <title><%= locals.pageMeta.title %></title>
  <meta name="description" content="<%= locals.pageMeta.description %>">
  <%- include('./includes/_head.ejs') %>
</head>
<body class="min-h-screen flex flex-col">
<%- include('./includes/_header.ejs') %>

<main class="flex-grow">
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-white to-primary/5 relative overflow-hidden">
    <div class="gradient-orb gradient-orb-1"></div>
    <div class="gradient-orb gradient-orb-2"></div>
    <div class="container-content relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="hero-title text-h1-mobile md:text-h1 font-bold text-police-titre mb-4">
            <%= locals.helpdesk.hero.title1 %>
            <span class="text-gradient"><%= locals.helpdesk.hero.titleHighlight %></span>
            <%= locals.helpdesk.hero.title2 %>
          </h1>
          <p class="hero-subtitle text-lg text-police-grey font-semibold mb-8">
            <%= locals.helpdesk.hero.subtitle %>
          </p>
          <div class="hero-cta">
            <a href="./contact" class="btn btn-primary inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Helpdesk Hero">
              <%= locals.helpdesk.hero.ctaDemo %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="hero-image flex justify-center">
          <div class="relative animate-float-slow">
            <img src="../static/assets/images/chatGptImage13Oct2025094933Png.png" alt="<%= locals.helpdesk.hero.heroImageAlt %>" class="w-full max-w-lg rounded-xl shadow-lg glow">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="section bg-primary/5">
    <div class="container-content text-center animate-on-scroll">
      <p class="text-xl md:text-2xl text-police-grey max-w-4xl mx-auto">
        <%= locals.helpdesk.quote1.text %>
        <strong><%= locals.helpdesk.quote1.highlight %></strong>
      </p>
    </div>
  </section>

  <!-- Problemes Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.helpdesk.challenges.title %> <span class="text-gradient"><%= locals.helpdesk.challenges.titleHighlight %></span> <%= locals.helpdesk.challenges.titleEnd %>
      </h2>
      <% var challengeIcons = ['M13 10V3L4 14h7v7l9-11h-7z', 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4', 'M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z', 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z']; %>
      <% var challengeBorders = ['border-l-red-500', 'border-l-orange-500', 'border-l-yellow-500', 'border-l-purple-500']; %>
      <% var challengeBgs = ['bg-red-100', 'bg-orange-100', 'bg-yellow-100', 'bg-purple-100']; %>
      <% var challengeColors = ['text-red-600', 'text-orange-600', 'text-yellow-600', 'text-purple-600']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger>
        <% locals.helpdesk.challenges.items.forEach(function(item, index) { %>
        <div class="card border-l-4 <%= challengeBorders[index] %>">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= challengeBgs[index] %> <%= challengeColors[index] %>">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= challengeIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Solutions Section -->
  <section class="section bg-gray-50">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.helpdesk.solutions.title %> <span class="text-gradient"><%= locals.helpdesk.solutions.titleHighlight %></span>
      </h2>
      <% var solIcons = ['M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4', 'M13 10V3L4 14h7v7l9-11h-7z', 'M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z']; %>
      <% var solBgs = ['bg-primary/10', 'bg-secondary/10', 'bg-green-100', 'bg-blue-100']; %>
      <% var solColors = ['text-primary', 'text-secondary', 'text-green-600', 'text-blue-600']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger-scale>
        <% locals.helpdesk.solutions.items.forEach(function(item, index) { %>
        <div class="card text-center hover:shadow-lg transition-shadow bg-white">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full <%= solBgs[index] %> <%= solColors[index] %>">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= solIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Compatible Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-4 animate-on-scroll">
        <%= locals.helpdesk.compatible.title %> <span class="text-gradient"><%= locals.helpdesk.compatible.titleHighlight %></span>
      </h2>
      <p class="text-xl text-center text-police-grey mb-12 animate-on-scroll">
        <%= locals.helpdesk.compatible.subtitle %>
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 animate-on-scroll">
        <img src="../static/assets/images/logoGlpiPng.png" alt="GLPI" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
        <img src="../static/assets/images/serviceNowLogoPng.png" alt="ServiceNow" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
        <img src="../static/assets/images/jiraSoftwareLogoWinePng.png" alt="Jira" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
        <img src="../static/assets/images/iTopPng.png" alt="iTop" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
      </div>
    </div>
  </section>

  <!-- Cas d'usage Section -->
  <section class="section bg-gray-50">
    <div class="container-content">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre mb-4">
          <%= locals.helpdesk.useCases.title %> <span class="text-gradient"><%= locals.helpdesk.useCases.titleHighlight %></span>
        </h2>
        <p class="text-lg text-police-grey max-w-3xl mx-auto">
          <%= locals.helpdesk.useCases.description %>
        </p>
      </div>
      <% var useCaseIcons = ['M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z', 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z', 'M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z']; %>
      <% var useCaseIconBgs = ['bg-primary', 'bg-secondary', 'bg-green-500']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-stagger-scale>
        <% locals.helpdesk.useCases.items.forEach(function(item, index) { %>
        <div class="card bg-white">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= useCaseIconBgs[index] %> text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= useCaseIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-animated text-white relative overflow-hidden">
    <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 animate-float"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3 animate-float" style="animation-delay: 2s;"></div>
    <div class="container-content text-center relative z-10">
      <h2 class="text-h2-mobile md:text-h2 font-bold mb-6 text-white animate-on-scroll">
        <%= locals.helpdesk.cta.title %>
      </h2>
      <p class="text-xl mb-8 text-white/90 animate-on-scroll">
        <%= locals.helpdesk.cta.subtitle %>
      </p>
      <div class="animate-on-scroll">
        <a href="./contact" class="btn btn-white inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Helpdesk Footer CTA">
          <%= locals.helpdesk.cta.button %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</main>

<%- include('./includes/_footer.ejs') %>

</body>
</html>
