<!DOCTYPE html>
<html lang="<%= locals.lang %>">
<head>
  <title><%= locals.pageMeta.title %></title>
  <meta name="description" content="<%= locals.pageMeta.description %>">
  <%- include('./includes/_head.ejs') %>
</head>
<body class="min-h-screen flex flex-col">
<%- include('./includes/_header.ejs') %>

<main class="flex-grow">
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-white to-primary/5 relative overflow-hidden">
    <div class="gradient-orb gradient-orb-1"></div>
    <div class="gradient-orb gradient-orb-2"></div>
    <div class="container-content relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="hero-title text-h1-mobile md:text-h1 font-bold text-police-titre mb-4">
            <span class="text-gradient"><%= locals.emailAutomationPage.hero.titleHighlight %></span>
            <%= locals.emailAutomationPage.hero.title %>
          </h1>
          <p class="hero-subtitle text-lg text-police-grey font-semibold mb-8">
            <%= locals.emailAutomationPage.hero.subtitle %>
          </p>
          <div class="hero-cta">
            <a href="./contact" class="btn btn-primary inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Mail Assistant Hero">
              <%= locals.emailAutomationPage.hero.ctaButton %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="hero-image flex justify-center">
          <div class="relative animate-float-slow">
            <img src="../static/assets/images/businessDashboardPng2.png" alt="<%= locals.emailAutomationPage.hero.heroImageAlt %>" class="w-full max-w-lg rounded-xl shadow-lg glow">
          </div>
        </div>
      </div>
    </div>
  </section>

  <% var challengeIcons = ['M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z', 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z']; %>
  <% var challengeColors = ['border-l-red-500', 'border-l-orange-500', 'border-l-yellow-500']; %>
  <% var challengeBgColors = ['bg-red-100 text-red-600', 'bg-orange-100 text-orange-600', 'bg-yellow-100 text-yellow-600']; %>

  <!-- Problem Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.emailAutomationPage.challenges.title %> <span class="text-gradient"><%= locals.emailAutomationPage.challenges.titleHighlight %></span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8" data-stagger>
        <% locals.emailAutomationPage.challenges.items.forEach(function(item, index) { %>
        <div class="card <%= challengeColors[index] %>">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= challengeBgColors[index] %>">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= challengeIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <% var solutionIcons = ['M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z', 'M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6', 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01']; %>
  <% var solutionBgColors = ['bg-primary/10 text-primary', 'bg-secondary/10 text-secondary', 'bg-green-100 text-green-600', 'bg-blue-100 text-blue-600']; %>

  <!-- Solutions Section -->
  <section class="section bg-gray-50">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.emailAutomationPage.solutions.title %> <span class="text-gradient"><%= locals.emailAutomationPage.solutions.titleHighlight %></span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger-scale>
        <% locals.emailAutomationPage.solutions.items.forEach(function(item, index) { %>
        <div class="card text-center hover:shadow-lg transition-shadow bg-white">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full <%= solutionBgColors[index] %>">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= solutionIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Workflow Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.emailAutomationPage.workflow.title %> <span class="text-gradient"><%= locals.emailAutomationPage.workflow.titleHighlight %></span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div data-stagger>
          <div class="space-y-6">
            <% locals.emailAutomationPage.workflow.steps.forEach(function(step, index) { %>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-full bg-gradient-to-br from-primary to-secondary text-white font-bold shadow-lg">
                <%= index + 1 %>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-police-titre mb-1"><%= step.title %></h3>
                <p class="text-police-grey text-sm"><%= step.description %></p>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
        <div class="bg-gray-50 rounded-xl p-8 animate-on-scroll">
          <h3 class="text-xl font-bold text-police-titre mb-4"><%= locals.emailAutomationPage.workflow.integrations.title %></h3>
          <p class="text-police-grey mb-6"><%= locals.emailAutomationPage.workflow.integrations.subtitle %></p>
          <div class="grid grid-cols-2 gap-4">
            <% locals.emailAutomationPage.workflow.integrations.items.forEach(function(item) { %>
            <div class="flex items-center gap-2 text-police-grey">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <%= item %>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-animated text-white relative overflow-hidden">
    <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 animate-float"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3 animate-float" style="animation-delay: 2s;"></div>
    <div class="container-content text-center relative z-10">
      <h2 class="text-h2-mobile md:text-h2 font-bold mb-6 text-white animate-on-scroll">
        <%= locals.emailAutomationPage.cta.title %>
      </h2>
      <p class="text-xl mb-8 text-white/90 animate-on-scroll">
        <%= locals.emailAutomationPage.cta.subtitle %>
      </p>
      <div class="animate-on-scroll">
        <a href="./contact" class="btn btn-white inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Mail Assistant Footer CTA">
          <%= locals.emailAutomationPage.cta.button %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</main>

<%- include('./includes/_footer.ejs') %>

</body>
</html>
