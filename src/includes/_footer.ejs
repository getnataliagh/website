          <img
            src="./assets/images/logoNataliaSvg.svg"
            alt="<%= locals.site.name %>"
            class="h-10 w-auto"
          >
        </a>
        <p class="text-gray-300 text-sm leading-relaxed mb-6">
          <%= locals.site.description %>
        </p>
        <!-- Made in France Badge -->
