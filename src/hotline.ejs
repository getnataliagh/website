<!DOCTYPE html>
<html lang="<%= locals.lang %>">
<head>
  <title><%= locals.pageMeta.title %></title>
  <meta name="description" content="<%= locals.pageMeta.description %>">
  <%- include('./includes/_head.ejs') %>
</head>
<body class="min-h-screen flex flex-col">
<%- include('./includes/_header.ejs') %>

<main class="flex-grow">
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-white to-primary/5 relative overflow-hidden">
    <div class="gradient-orb gradient-orb-1"></div>
    <div class="gradient-orb gradient-orb-2"></div>
    <div class="container-content relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="hero-title text-h1-mobile md:text-h1 font-bold text-police-titre mb-4">
            <%= locals.hotline.hero.title1 %>
            <span class="text-gradient"><%= locals.hotline.hero.titleHighlight %></span>
            <%= locals.hotline.hero.title2 %>
          </h1>
          <p class="hero-subtitle text-lg text-police-grey font-semibold mb-8">
            <%= locals.hotline.hero.subtitle %>
          </p>
          <div class="hero-cta">
            <a href="./contact" class="btn btn-primary inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Hotline Hero">
              <%= locals.hotline.hero.ctaDemo %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="hero-image flex justify-center">
          <div class="relative animate-float-slow">
            <img src="../static/assets/images/hotlinePng2.png" alt="<%= locals.hotline.hero.heroImageAlt %>" class="w-full max-w-lg rounded-xl shadow-lg glow">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="section bg-primary/5">
    <div class="container-content text-center">
      <p class="text-xl md:text-2xl text-police-grey max-w-4xl mx-auto animate-on-scroll">
        <%= locals.hotline.quote1.text %>
        <strong><%= locals.hotline.quote1.highlight %></strong>
      </p>
    </div>
  </section>

  <!-- Problemes Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.hotline.challenges.title %> <span class="text-gradient"><%= locals.hotline.challenges.titleHighlight %></span> <%= locals.hotline.challenges.titleEnd %>
      </h2>
      <% var challengeIcons = ['M13 10V3L4 14h7v7l9-11h-7z', 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', 'M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z', 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z']; %>
      <% var challengeBorders = ['border-l-red-500', 'border-l-orange-500', 'border-l-yellow-500', 'border-l-purple-500']; %>
      <% var challengeBgs = ['bg-red-100', 'bg-orange-100', 'bg-yellow-100', 'bg-purple-100']; %>
      <% var challengeColors = ['text-red-600', 'text-orange-600', 'text-yellow-600', 'text-purple-600']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger>
        <% locals.hotline.challenges.items.forEach(function(item, index) { %>
        <div class="card border-l-4 <%= challengeBorders[index] %>">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= challengeBgs[index] %> <%= challengeColors[index] %>">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= challengeIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Solutions Section -->
  <section class="section bg-gray-50">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.hotline.solutions.title %> <span class="text-gradient"><%= locals.hotline.solutions.titleHighlight %></span>
      </h2>
      <% var solIcons = ['M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z', 'M13 10V3L4 14h7v7l9-11h-7z', 'M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z']; %>
      <% var solBgs = ['bg-primary/10', 'bg-secondary/10', 'bg-green-100', 'bg-blue-100']; %>
      <% var solColors = ['text-primary', 'text-secondary', 'text-green-600', 'text-blue-600']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger-scale>
        <% locals.hotline.solutions.items.forEach(function(item, index) { %>
        <div class="card text-center hover:shadow-lg transition-shadow bg-white">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full <%= solBgs[index] %> <%= solColors[index] %>">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= solIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Compatible Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-4 animate-on-scroll">
        <%= locals.hotline.compatible.title %> <span class="text-gradient"><%= locals.hotline.compatible.titleHighlight %></span>
      </h2>
      <p class="text-xl text-center text-police-grey mb-12 animate-on-scroll">
        <%= locals.hotline.compatible.subtitle %>
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 animate-on-scroll">
        <img src="../static/assets/images/logoGlpiPng.png" alt="GLPI" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
        <img src="../static/assets/images/zendeskLogoPng.png" alt="Zendesk" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
        <img src="../static/assets/images/serviceNowLogoPng.png" alt="ServiceNow" class="h-12 md:h-16 object-contain opacity-70 hover:opacity-100 transition-opacity">
      </div>
    </div>
  </section>

  <!-- Cas d'usage Section -->
  <section class="section bg-gray-50">
    <div class="container-content">
      <div class="text-center mb-12">
        <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre mb-4 animate-on-scroll">
          <%= locals.hotline.useCases.title %> <span class="text-gradient"><%= locals.hotline.useCases.titleHighlight %></span>
        </h2>
        <p class="text-lg text-police-grey max-w-3xl mx-auto animate-on-scroll">
          <%= locals.hotline.useCases.description %>
        </p>
      </div>
      <% var useCaseIcons = ['M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z', 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01', 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z', 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z']; %>
      <% var useCaseIconBgs = ['bg-primary', 'bg-secondary', 'bg-green-500', 'bg-orange-500']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger-scale>
        <% locals.hotline.useCases.items.forEach(function(item, index) { %>
        <div class="card bg-white">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= useCaseIconBgs[index] %> text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= useCaseIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-animated text-white relative overflow-hidden">
    <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 animate-float"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3 animate-float" style="animation-delay: 2s;"></div>
    <div class="container-content text-center relative z-10">
      <h2 class="text-h2-mobile md:text-h2 font-bold mb-6 animate-on-scroll">
        <%= locals.hotline.cta.title %>
      </h2>
      <p class="text-xl mb-8 opacity-90 animate-on-scroll">
        <%= locals.hotline.cta.subtitle %>
      </p>
      <div class="animate-on-scroll">
        <a href="./contact" class="btn btn-white inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Hotline Footer CTA">
          <%= locals.hotline.cta.button %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</main>

<%- include('./includes/_footer.ejs') %>

</body>
</html>
