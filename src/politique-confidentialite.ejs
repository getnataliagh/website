<body class="min-h-screen flex flex-col">
<%- include('./includes/_header.ejs') %>

<main class="flex-grow">

<!-- Hero Section -->
<section class="relative bg-[#030014] overflow-hidden py-24 md:py-32">
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-gradient-to-r from-primary/30 to-transparent rounded-full blur-[120px] animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-gradient-to-l from-secondary/20 to-transparent rounded-full blur-[100px] animate-pulse-slow" style="animation-delay: 2s;"></div>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(92,57,238,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(92,57,238,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <div class="container-content relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-8 animate-on-scroll">
        <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span class="text-primary font-medium text-sm tracking-wide"><%= locals.privacyPolicy.badge %></span>
      </div>

      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight animate-on-scroll">
        <%= locals.privacyPolicy.title %> <span class="bg-gradient-to-r from-primary via-purple-400 to-secondary bg-clip-text text-transparent"><%= locals.privacyPolicy.titleHighlight %></span>
      </h1>

      <p class="text-lg md:text-xl text-white/60 max-w-2xl mx-auto animate-on-scroll">
        <%= locals.privacyPolicy.subtitle %>
      </p>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce-slow">
    <svg class="w-6 h-6 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<!-- Intro Section -->
<section class="py-16 bg-white">
  <div class="container-content">
    <div class="max-w-3xl mx-auto text-center animate-on-scroll">
      <p class="text-lg text-police-grey leading-relaxed">
        <%= locals.privacyPolicy.intro %>
      </p>
    </div>
  </div>
</section>

<!-- Main Content Grid -->
<section class="py-24 bg-background-2">
  <div class="container-content">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6" data-stagger>

      <!-- Collecte des donnees -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 group" data-animate="fade-up">
        <div class="relative z-10 p-8 h-full">
          <div class="w-14 h-14 mb-6 relative">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-blue-600/10 rounded-2xl opacity-20 group-hover:opacity-40 transition-opacity blur-xl"></div>
            <div class="relative w-full h-full bg-gradient-to-br from-blue-500/20 to-blue-600/10 rounded-2xl border border-blue-500/30 flex items-center justify-center group-hover:border-blue-500/60 transition-colors">
              <svg class="w-7 h-7 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>

          <h3 class="text-2xl font-bold text-police-titre mb-4 group-hover:text-blue-500 transition-colors">
            <%= locals.privacyPolicy.dataCollection.title %>
          </h3>

          <p class="text-police-grey mb-6 leading-relaxed">
            <%= locals.privacyPolicy.dataCollection.description %>
          </p>

          <ul class="space-y-3">
            <% locals.privacyPolicy.dataCollection.items.forEach(function(item) { %>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-police-grey"><%= item %></span>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>

      <!-- Utilisation des donnees -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 group" data-animate="fade-up" style="--delay: 0.1s;">
        <div class="relative z-10 p-8 h-full">
          <div class="w-14 h-14 mb-6 relative">
            <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/20 to-emerald-600/10 rounded-2xl opacity-20 group-hover:opacity-40 transition-opacity blur-xl"></div>
            <div class="relative w-full h-full bg-gradient-to-br from-emerald-500/20 to-emerald-600/10 rounded-2xl border border-emerald-500/30 flex items-center justify-center group-hover:border-emerald-500/60 transition-colors">
              <svg class="w-7 h-7 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
          </div>

          <h3 class="text-2xl font-bold text-police-titre mb-4 group-hover:text-emerald-500 transition-colors">
            <%= locals.privacyPolicy.dataUsage.title %>
          </h3>

          <p class="text-police-grey mb-6 leading-relaxed">
            <%= locals.privacyPolicy.dataUsage.description %>
          </p>

          <ul class="space-y-3">
            <% locals.privacyPolicy.dataUsage.items.forEach(function(item) { %>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-emerald-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-police-grey"><%= item %></span>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- Protection Section -->
