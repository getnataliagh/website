        </svg>
        <span class="text-primary font-medium text-sm tracking-wide"><%= locals.privacyPolicy.protection.badge %></span>
      </div>

      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
        <%= locals.privacyPolicy.protection.title %> <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"><%= locals.privacyPolicy.protection.titleHighlight %></span>
      </h2>
    </div>

    <div class="bento-card bento-card-hero animate-on-scroll">
      <div class="relative z-10 p-8 md:p-12">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <p class="text-white/80 text-lg leading-relaxed mb-6">
              <%= locals.privacyPolicy.protection.description %>
            </p>

            <div class="space-y-4">
              <% var protectionIcons = ['M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z', 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z', 'M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z']; %>
              <% var protectionColors = ['primary', 'emerald-400', 'amber-400']; %>
              <% var protectionBgs = ['bg-primary/20', 'bg-emerald-500/20', 'bg-amber-500/20']; %>
              <% locals.privacyPolicy.protection.features.forEach(function(feature, index) { %>
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg <%= protectionBgs[index] %> flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-<%= protectionColors[index] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= protectionIcons[index] %>"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-semibold mb-1"><%= feature.title %></h4>
                  <p class="text-white/60 text-sm"><%= feature.description %></p>
                </div>
              </div>
              <% }); %>
            </div>
          </div>

          <div class="relative">
            <div class="w-full aspect-square rounded-2xl bg-gradient-to-br from-primary/10 to-secondary/10 border border-white/10 flex items-center justify-center">
              <svg class="w-32 h-32 text-primary/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Vos droits RGPD -->
