<!DOCTYPE html>
<html lang="<%= locals.lang %>">
<head>
  <title><%= locals.pageMeta.title %></title>
  <meta name="description" content="<%= locals.pageMeta.description %>">
  <%- include('./includes/_head.ejs') %>
</head>
<body class="min-h-screen flex flex-col">
<%- include('./includes/_header.ejs') %>

<main class="flex-grow">
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-white to-primary/5 relative overflow-hidden">
    <div class="gradient-orb gradient-orb-1"></div>
    <div class="gradient-orb gradient-orb-2"></div>
    <div class="container-content relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="hero-title text-h1-mobile md:text-h1 font-bold text-police-titre mb-4">
            <%= locals.automobile.hero.title1 %>
            <span class="text-gradient"><%= locals.automobile.hero.titleHighlight %></span>
            <%= locals.automobile.hero.title2 %>
          </h1>
          <p class="hero-subtitle text-lg text-police-grey font-semibold mb-8">
            <%= locals.automobile.hero.subtitle %>
          </p>
          <div class="hero-cta">
            <a href="./contact" class="btn btn-primary inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Automobile Hero">
              <%= locals.automobile.hero.ctaDemo %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="hero-image flex justify-center">
          <div class="relative animate-float-slow">
            <img src="../static/assets/images/automobilePng2.png" alt="<%= locals.automobile.hero.heroImageAlt %>" class="w-full max-w-lg rounded-xl shadow-lg glow">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="section bg-primary/5">
    <div class="container-content text-center">
      <p class="text-xl md:text-2xl text-police-grey max-w-4xl mx-auto animate-on-scroll">
        <strong><%= locals.automobile.quote1.text %></strong> <%= locals.automobile.quote1.description %>
      </p>
    </div>
  </section>

  <!-- Problemes Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.automobile.challenges.title %> <span class="text-gradient"><%= locals.automobile.challenges.titleHighlight %></span> <%= locals.automobile.challenges.titleEnd %>
      </h2>
      <% var challengeIcons = ['M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z', 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4', 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z']; %>
      <% var challengeBorders = ['border-l-red-500', 'border-l-orange-500', 'border-l-yellow-500', 'border-l-purple-500']; %>
      <% var challengeBgs = ['bg-red-100', 'bg-orange-100', 'bg-yellow-100', 'bg-purple-100']; %>
      <% var challengeColors = ['text-red-600', 'text-orange-600', 'text-yellow-600', 'text-purple-600']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger>
        <% locals.automobile.challenges.items.forEach(function(item, index) { %>
        <div class="card border-l-4 <%= challengeBorders[index] %>">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= challengeBgs[index] %> <%= challengeColors[index] %>">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= challengeIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Quote Section 2 -->
  <section class="section bg-police-titre text-white">
    <div class="container-content text-center">
      <p class="text-xl md:text-2xl max-w-4xl mx-auto animate-on-scroll">
        <%= locals.automobile.quote2.text %> <strong><%= locals.automobile.quote2.highlight %></strong>
      </p>
    </div>
  </section>

  <!-- Solutions Section -->
  <section class="section bg-white">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-12 animate-on-scroll">
        <%= locals.automobile.solutions.title %> <span class="text-gradient"><%= locals.automobile.solutions.titleHighlight %></span>
      </h2>
      <% var solIcons = ['M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z', 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z', 'M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z']; %>
      <% var solBgs = ['bg-primary/10', 'bg-secondary/10', 'bg-green-100', 'bg-blue-100']; %>
      <% var solColors = ['text-primary', 'text-secondary', 'text-green-600', 'text-blue-600']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger-scale>
        <% locals.automobile.solutions.items.forEach(function(item, index) { %>
        <div class="card text-center hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full <%= solBgs[index] %> <%= solColors[index] %>">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= solIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Compatible Section -->
  <section class="section bg-gray-50">
    <div class="container-content">
      <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre text-center mb-4 animate-on-scroll">
        <%= locals.automobile.compatible.title %> <span class="text-gradient"><%= locals.automobile.compatible.titleHighlight %></span>
      </h2>
      <p class="text-xl text-center text-police-grey mb-12 animate-on-scroll">
        <%= locals.automobile.compatible.subtitle %>
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 animate-on-scroll">
        <img src="../static/assets/images/nextlanePng.png" alt="Nextlane" class="h-10 md:h-14 object-contain opacity-70 hover:opacity-100 transition-opacity">
        <img src="../static/assets/images/logoMpaPng.png" alt="MPA" class="h-10 md:h-14 object-contain opacity-70 hover:opacity-100 transition-opacity">
      </div>
    </div>
  </section>

  <!-- Cas d'usage Section -->
  <section class="section bg-white">
    <div class="container-content">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-h2-mobile md:text-h2 font-bold text-police-titre mb-4">
          <%= locals.automobile.useCases.title %> <span class="text-gradient"><%= locals.automobile.useCases.titleHighlight %></span>
        </h2>
        <p class="text-lg text-police-grey max-w-3xl mx-auto">
          <%= locals.automobile.useCases.description %>
        </p>
      </div>
      <% var useCaseIcons = ['M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z', 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z', 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z', 'M13 10V3L4 14h7v7l9-11h-7z']; %>
      <% var useCaseBgs = ['from-primary/5 to-primary/10', 'from-secondary/5 to-secondary/10', 'from-green-50 to-green-100', 'from-orange-50 to-orange-100']; %>
      <% var useCaseBorders = ['border-primary/20', 'border-secondary/20', 'border-green-200', 'border-orange-200']; %>
      <% var useCaseIconBgs = ['bg-primary', 'bg-secondary', 'bg-green-500', 'bg-orange-500']; %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger-scale>
        <% locals.automobile.useCases.items.forEach(function(item, index) { %>
        <div class="card bg-gradient-to-br <%= useCaseBgs[index] %> border <%= useCaseBorders[index] %>">
          <div class="w-12 h-12 mb-4 flex items-center justify-center rounded-full <%= useCaseIconBgs[index] %> text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= useCaseIcons[index] %>"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-police-titre mb-2"><%= item.title %></h3>
          <p class="text-police-grey text-sm">
            <%= item.description %>
          </p>
        </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-animated text-white relative overflow-hidden">
    <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 animate-float"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3 animate-float" style="animation-delay: 2s;"></div>
    <div class="container-content text-center relative z-10">
      <h2 class="text-h2-mobile md:text-h2 font-bold mb-6 text-white animate-on-scroll">
        <%= locals.automobile.cta.title %>
      </h2>
      <div class="animate-on-scroll">
        <a href="./contact" class="btn btn-white inline-flex items-center gap-2" data-track-content data-content-name="CTA Demo" data-content-piece="Automobile Footer CTA">
          <%= locals.automobile.cta.button %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</main>

<%- include('./includes/_footer.ejs') %>

</body>
</html>
