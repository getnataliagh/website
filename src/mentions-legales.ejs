<!DOCTYPE html>
<html lang="<%= locals.lang %>">
<head>
  <title><%= locals.pageMeta.title %></title>
  <meta name="description" content="<%= locals.pageMeta.description %>">
  <%- include('./includes/_head.ejs') %>
</head>
<body class="min-h-screen flex flex-col">

<%- include('./includes/_header.ejs') %>

<main class="flex-grow">

<!-- Hero Section -->
<section class="relative bg-[#030014] overflow-hidden py-20 md:py-28">
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-gradient-to-r from-primary/30 to-transparent rounded-full blur-[120px] animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-gradient-to-l from-secondary/20 to-transparent rounded-full blur-[100px] animate-pulse-slow" style="animation-delay: 2s;"></div>
    <div class="absolute inset-0 bg-[linear-gradient(rgba(92,57,238,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(92,57,238,0.02)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <div class="container-content relative z-10">
    <div class="text-center max-w-3xl mx-auto">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6 animate-on-scroll">
        <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span class="text-primary font-medium text-sm tracking-wide"><%= locals.legalNotice.badge %></span>
      </div>

      <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
        <%= locals.legalNotice.title %> <span class="bg-gradient-to-r from-primary via-purple-400 to-secondary bg-clip-text text-transparent"><%= locals.legalNotice.titleHighlight %></span>
      </h1>

      <p class="hero-subtitle text-lg text-white/60 max-w-2xl mx-auto">
        <%= locals.legalNotice.subtitle %>
      </p>
    </div>
  </div>
</section>

<!-- Content Section -->
<section class="py-16 md:py-24 bg-background-2">
  <div class="container-content max-w-5xl">

    <div class="grid grid-cols-1 gap-6 mb-8" data-stagger>

      <!-- Editeur du site -->
      <div class="bento-card bg-white p-8 md:p-10 rounded-2xl" data-animate="fade-up">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-gradient-to-br from-primary/20 to-purple-600/20 border border-primary/30 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div class="flex-grow">
            <h2 class="text-2xl font-bold text-police-titre mb-4"><%= locals.legalNotice.sections.editor.title %></h2>
            <div class="space-y-2 text-police-grey">
              <% locals.legalNotice.sections.editor.items.forEach(function(item) { %>
              <p class="flex items-start gap-2">
                <span class="text-primary mt-1">•</span>
                <span><%= item %></span>
              </p>
              <% }); %>
            </div>
          </div>
        </div>
      </div>

      <!-- Directeur de la publication -->
      <div class="bento-card bg-white p-8 md:p-10 rounded-2xl" data-animate="fade-up" style="--delay: 0.1s;">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-gradient-to-br from-emerald-500/20 to-emerald-600/20 border border-emerald-500/30 flex items-center justify-center">
            <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div class="flex-grow">
            <h2 class="text-2xl font-bold text-police-titre mb-4"><%= locals.legalNotice.sections.director.title %></h2>
            <div class="space-y-2 text-police-grey">
              <p class="flex items-start gap-2">
                <span class="text-emerald-500 mt-1">•</span>
                <span><strong class="text-police-titre"><%= locals.legalNotice.sections.director.company %></strong></span>
              </p>
              <p class="flex items-start gap-2">
                <span class="text-emerald-500 mt-1">•</span>
                <span><%= locals.legalNotice.sections.director.contactLabel %> : <a href="mailto:<%= locals.site.email %>" class="text-primary hover:underline font-medium"><%= locals.site.email %></a></span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Hebergement -->
      <div class="bento-card bg-white p-8 md:p-10 rounded-2xl" data-animate="fade-up" style="--delay: 0.2s;">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-gradient-to-br from-amber-500/20 to-orange-600/20 border border-amber-500/30 flex items-center justify-center">
            <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
            </svg>
          </div>
          <div class="flex-grow">
            <h2 class="text-2xl font-bold text-police-titre mb-4"><%= locals.legalNotice.sections.hosting.title %></h2>
            <div class="space-y-2 text-police-grey">
              <% locals.legalNotice.sections.hosting.items.forEach(function(item) { %>
              <p class="flex items-start gap-2">
                <span class="text-amber-500 mt-1">•</span>
                <span><%= item %></span>
              </p>
              <% }); %>
            </div>
          </div>
        </div>
      </div>

      <!-- Propriete intellectuelle -->
      <div class="bento-card bg-white p-8 md:p-10 rounded-2xl" data-animate="fade-up" style="--delay: 0.3s;">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-gradient-to-br from-purple-500/20 to-purple-600/20 border border-purple-500/30 flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <div class="flex-grow">
            <h2 class="text-2xl font-bold text-police-titre mb-4"><%= locals.legalNotice.sections.intellectualProperty.title %></h2>
            <p class="text-police-grey leading-relaxed">
              <%= locals.legalNotice.sections.intellectualProperty.text %>
            </p>
          </div>
        </div>
      </div>

      <!-- Donnees personnelles -->
      <div class="bento-card bg-white p-8 md:p-10 rounded-2xl" data-animate="fade-up" style="--delay: 0.4s;">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-gradient-to-br from-cyan-500/20 to-cyan-600/20 border border-cyan-500/30 flex items-center justify-center">
            <svg class="w-6 h-6 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <div class="flex-grow">
            <h2 class="text-2xl font-bold text-police-titre mb-4"><%= locals.legalNotice.sections.personalData.title %></h2>
            <div class="space-y-4 text-police-grey leading-relaxed">
              <p><%= locals.legalNotice.sections.personalData.text1 %></p>
              <p><%= locals.legalNotice.sections.personalData.text2 %> <a href="mailto:<%= locals.site.email %>" class="text-primary hover:underline font-medium"><%= locals.site.email %></a></p>
              <div class="mt-6 p-4 rounded-xl bg-primary/5 border border-primary/20">
                <p class="flex items-center gap-2 text-primary font-medium">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= locals.legalNotice.sections.personalData.moreInfo %>
                </p>
                <p class="mt-2 text-sm">
                  <%= locals.legalNotice.sections.personalData.moreInfoText %> <a href="<%= locals.legalNotice.cta.privacyButtonUrl %>" class="text-primary hover:underline font-semibold"><%= locals.legalNotice.sections.personalData.privacyLink %></a>.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
</section>

<!-- CTA Section -->
<section class="py-16 md:py-20 bg-gradient-animated text-white relative overflow-hidden">
  <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 animate-float"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3 animate-float" style="animation-delay: 2s;"></div>

  <div class="container-content text-center relative z-10">
    <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white animate-on-scroll">
      <%= locals.legalNotice.cta.title %>
    </h2>
    <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto animate-on-scroll">
      <%= locals.legalNotice.cta.subtitle %>
    </p>
    <div class="flex flex-col sm:flex-row justify-center gap-4 animate-on-scroll">
      <a href="./contact" class="btn btn-white">
        <%= locals.legalNotice.cta.contactButton %>
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <a href="<%= locals.legalNotice.cta.privacyButtonUrl %>" class="btn btn-outline">
        <%= locals.legalNotice.cta.privacyButton %>
      </a>
    </div>
  </div>
</section>

</main>

<%- include('./includes/_footer.ejs') %>

</body>
</html>
