<!DOCTYPE html>
<html lang="<%= locals.lang %>">
<head>
  <title><%= locals.pageMeta.title %></title>
  <meta name="description" content="<%= locals.pageMeta.description %>">
  <%- include('./includes/_head.ejs') %>
</head>
<body class="min-h-screen flex flex-col">
<%- include('./includes/_header.ejs') %>

<main class="flex-grow">

  <!-- Hero Section - Dark with Gradient -->
  <section class="relative bg-[#030014] overflow-hidden py-20 md:py-28">
    <!-- Animated background -->
    <div class="absolute inset-0">
      <div class="absolute top-0 right-1/4 w-[600px] h-[600px] bg-gradient-to-r from-primary/30 to-transparent rounded-full blur-[120px] animate-pulse-slow"></div>
      <div class="absolute bottom-0 left-1/4 w-[500px] h-[500px] bg-gradient-to-l from-secondary/20 to-transparent rounded-full blur-[100px] animate-pulse-slow" style="animation-delay: 2s;"></div>
      <div class="absolute inset-0 bg-[linear-gradient(rgba(92,57,238,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(92,57,238,0.02)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
    </div>

    <div class="container-content relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-8 animate-on-scroll">
          <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <span class="text-primary font-medium text-sm tracking-wide"><%= locals.termsOfService.badge %></span>
        </div>

        <!-- Title -->
        <h1 class="hero-title text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          <%= locals.termsOfService.title %> <br class="hidden md:block">
          <span class="bg-gradient-to-r from-primary via-purple-400 to-secondary bg-clip-text text-transparent"><%= locals.termsOfService.titleHighlight %></span>
        </h1>

        <p class="hero-subtitle text-lg md:text-xl text-white/60 mb-8 max-w-2xl mx-auto leading-relaxed">
          <%= locals.termsOfService.subtitle %>
        </p>

        <!-- Legal icon decoration -->
        <div class="hero-cta flex justify-center gap-6 text-white/40 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span><%= locals.termsOfService.legalDoc %></span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span><%= locals.termsOfService.updatedRegularly %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce-slow">
      <svg class="w-6 h-6 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Articles Section - Bento Grid Style -->
  <section class="py-16 md:py-24 bg-background-2">
    <div class="container-content">

      <!-- Introduction Card -->
      <div class="max-w-4xl mx-auto mb-16 animate-on-scroll">
        <div class="bento-card bg-white p-8 md:p-10 rounded-2xl">
          <div class="flex items-start gap-6">
            <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-police-titre mb-4"><%= locals.termsOfService.preamble.title %></h2>
              <p class="text-police-grey leading-relaxed">
                <%= locals.termsOfService.preamble.text %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <% var gridIcons = ['M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z', 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10', 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z', 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z']; %>
      <% var gridColors = ['blue', 'primary', 'emerald', 'amber']; %>
      <% var gridGradients = ['from-blue-500/20 to-blue-600/20', 'from-primary/20 to-purple-600/20', 'from-emerald-500/20 to-emerald-600/20', 'from-amber-500/20 to-amber-600/20']; %>
      <% var gridBorders = ['border-blue-500/30', 'border-primary/30', 'border-emerald-500/30', 'border-amber-500/30']; %>
      <% var gridTextColors = ['text-blue-500', 'text-primary', 'text-emerald-500', 'text-amber-500']; %>
      <% var gridBgColors = ['bg-blue-500/10 border-blue-500/20', 'bg-primary/10 border-primary/20', 'bg-emerald-500/10 border-emerald-500/20', 'bg-amber-500/10 border-amber-500/20']; %>

      <!-- Articles Grid (first 4 articles) -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-16" data-stagger>
        <% locals.termsOfService.articles.slice(0, 4).forEach(function(article, index) { %>
        <div class="bento-card bg-white p-8 rounded-2xl" data-animate="fade-up" style="--delay: <%= index * 0.1 %>s;">
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 flex-shrink-0 rounded-xl bg-gradient-to-br <%= gridGradients[index] %> border <%= gridBorders[index] %> flex items-center justify-center">
              <svg class="w-6 h-6 <%= gridTextColors[index] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= gridIcons[index] %>"></path>
              </svg>
            </div>
            <div>
              <div class="mb-2 inline-flex items-center gap-2 px-3 py-1 rounded-full <%= gridBgColors[index] %>">
                <span class="<%= gridTextColors[index] %> text-xs font-semibold"><%= article.number %></span>
              </div>
              <h3 class="text-xl font-bold text-police-titre mb-3"><%= article.title %></h3>
            </div>
          </div>
          <% if (article.items) { %>
          <p class="text-police-grey mb-4"><%= article.intro %></p>
          <ul class="space-y-2">
            <% article.items.forEach(function(item) { %>
            <li class="flex items-start gap-3 text-police-grey text-sm">
              <svg class="w-5 h-5 <%= gridTextColors[index] %> mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span><%= item %></span>
            </li>
            <% }); %>
          </ul>
          <% } else { %>
          <p class="text-police-grey leading-relaxed">
            <%= article.text %>
          </p>
          <% } %>
        </div>
        <% }); %>
      </div>

      <% var fullWidthIcons = ['M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z', 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z', 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15', 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z']; %>
      <% var fullWidthColors = ['purple', 'red', 'cyan', 'indigo']; %>
      <% var fullWidthGradients = ['from-purple-500/20 to-purple-600/20', 'from-red-500/20 to-red-600/20', 'from-cyan-500/20 to-cyan-600/20', 'from-indigo-500/20 to-indigo-600/20']; %>
      <% var fullWidthBorders = ['border-purple-500/30', 'border-red-500/30', 'border-cyan-500/30', 'border-indigo-500/30']; %>
      <% var fullWidthTextColors = ['text-purple-500', 'text-red-500', 'text-cyan-500', 'text-indigo-500']; %>
      <% var fullWidthBgColors = ['bg-purple-500/10 border-purple-500/20', 'bg-red-500/10 border-red-500/20', 'bg-cyan-500/10 border-cyan-500/20', 'bg-indigo-500/10 border-indigo-500/20']; %>

      <!-- Full Width Articles (articles 5-8) -->
      <div class="space-y-6" data-stagger>
        <% locals.termsOfService.articles.slice(4, 8).forEach(function(article, index) { %>
        <div class="bento-card bg-white p-8 md:p-10 rounded-2xl" data-animate="fade-up">
          <div class="flex items-start gap-6">
            <div class="w-14 h-14 flex-shrink-0 rounded-xl bg-gradient-to-br <%= fullWidthGradients[index] %> border <%= fullWidthBorders[index] %> flex items-center justify-center">
              <svg class="w-7 h-7 <%= fullWidthTextColors[index] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= fullWidthIcons[index] %>"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="mb-3 inline-flex items-center gap-2 px-3 py-1 rounded-full <%= fullWidthBgColors[index] %>">
                <span class="<%= fullWidthTextColors[index] %> text-xs font-semibold"><%= article.number %></span>
              </div>
              <h3 class="text-2xl font-bold text-police-titre mb-4"><%= article.title %></h3>
              <% if (article.items) { %>
              <p class="text-police-grey leading-relaxed mb-4">
                <%= article.intro %>
              </p>
              <ul class="space-y-2 text-police-grey">
                <% article.items.forEach(function(item) { %>
                <li class="flex items-start gap-3">
                  <span class="<%= fullWidthTextColors[index] %> mt-1">â€¢</span>
                  <span><%= item %></span>
                </li>
                <% }); %>
              </ul>
              <% } else if (index === 3) { %>
              <p class="text-police-grey leading-relaxed">
                <%= article.text %> <a href="mailto:<%= locals.site.email %>" class="text-primary hover:underline font-medium"><%= locals.site.email %></a>
              </p>
              <% } else { %>
              <p class="text-police-grey leading-relaxed">
                <%= article.text %>
              </p>
              <% } %>
            </div>
          </div>
        </div>
        <% }); %>
      </div>

    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 bg-gradient-animated text-white relative overflow-hidden">
    <!-- Decorative shapes -->
    <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 animate-float"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3 animate-float" style="animation-delay: 2s;"></div>

    <div class="container-content relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 border border-white/20 mb-6 animate-on-scroll">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-white/90 font-medium text-sm"><%= locals.termsOfService.cta.badge %></span>
        </div>

        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white animate-on-scroll">
          <%= locals.termsOfService.cta.title %>
        </h2>

        <p class="text-lg text-white/80 mb-8 animate-on-scroll">
          <%= locals.termsOfService.cta.subtitle %>
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-4 animate-on-scroll">
          <a href="./contact" class="btn btn-white">
            <%= locals.termsOfService.cta.contactButton %>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href="<%= locals.termsOfService.cta.legalButtonUrl %>" class="btn btn-outline">
            <%= locals.termsOfService.cta.legalButton %>
          </a>
        </div>
      </div>
    </div>
  </section>

</main>

<%- include('./includes/_footer.ejs') %>

</body>
</html>
